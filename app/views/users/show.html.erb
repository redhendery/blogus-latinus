<% provide(:title, @user.username) %>

<% if @user === current_user %>
  <div class="columns">
    <div class="column">
      <%= link_to 'Write New Blog Post', new_post_path, class: 'button is-success is-fullwidth' %>
    </div>
    <div class="column">
      <%= link_to 'Edit User Profile', edit_user_registration_url(@user), class: 'button is-warning is-fullwidth' %>
    </div>
    <div class="column">
      <%= link_to 'Delete User Profile', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger is-fullwidth' %>
    </div>
  </div>
<% end %>

<h1 class="title is-1">
  <%= @user.username %>
</h1>
<p class="is-size-5">
  A Quote From <%= @user.username %>: <span class="is-italic has-text-grey">"<%= @user.about %>"</span>
</p>
<hr>

<div class="columns is-vcentered">
  <div class="column">
    <h5 class="title is-5">
      <%= @user.username.pluralize %> three most recent Blog Posts:
    </h5>
  </div>
  <div class="column">
    <h5 class="title is-5 is-pulled-right">
      <%= link_to all_posts_user_path do %>
        All Posts By <%= @user.username %>
      <% end %>
    </h5>
  </div>
</div>
<hr>
<%= render 'shared/post_index' %>
