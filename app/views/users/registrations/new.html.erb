<h1 class="title is-1">Sign up for an account!</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="columns is-centered">
    <div class="column is-5">
      <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.label :username, class: 'label' %>
        <%= f.email_field :username, required: true, class: 'input',
              type: 'test', placeholder: 'Your Name' %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, required: true, class: 'input',
              type: 'email', placeholder: 'Your Email Address' %>
      </div>

      <div class="field is-grouped">
        <%= f.label :password, class: 'label' %>
        <% if @minimum_password_length %>
        <em> (<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.password_field :password, required: true,
            class: 'input', type: 'password', placeholder: 'Choose a Password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, required: true,
            class: 'input', type: 'password', placeholder: 'Confirm Your Password' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'button is-medium is-link is-fullwidth' %>
      </div>
      <br>
      <p>Already have an account? <%= link_to 'Log in here', new_session_path(resource_name) %> instead!</p>
      <hr>
      <p>Just wanting to have a look around as a user?</p>
      <p><%= link_to 'Log in', new_session_path(resource_name) %> using these credentials:</p>
      <p>Email: user@email.com</p>
      <p>Password: password</p>
    </div>
  </div>
<% end %>
