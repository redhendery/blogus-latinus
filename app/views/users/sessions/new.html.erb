<h1 class="title is-1">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="columns is-centered">
    <div class="column is-5">

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, class: 'input',
              type: 'email', placeholder: 'Enter Your Email Address' %>
      </div>

      <div class="field is-grouped">
        <%= f.label :password, class: 'label', style: 'padding-right:15px;' %>
        <%= link_to '(Forgot Your Password?)', new_password_path(resource_name) %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'input',
              type: 'password', placeholder: 'Enter Your Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me, class: 'checkbox' do %>
          <%= f.check_box :remember_me %>
            <span style="padding-left:7px;">Remember me on this computer</span>
            <br>
          <% end %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit 'Log In', class: 'button is-medium is-link is-fullwidth' %>
      </div>
      <p>Don't have an account? <%= link_to 'Create One!', new_registration_path(resource_name) %></p>
      <hr>
      <p>Just wanting to have a look around as a user?</p>
      <p>Log in using these credentials:</p>
      <p>Email: user@email.com</p>
      <p>Password: password</p>
    </div>
  </div>
<% end %>
