<h1 class="title is-1">Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="columns is-centered">
    <div class="column is-5">
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email',
                    required: true, class: 'input', type: 'email', placeholder: 'Your Email Address' %>
      </div>

      <div class="field">
        <%= f.submit 'Send password reset instructions', class: 'button is-medium is-link is-fullwidth' %>
      </div>
      <p>Don't have an account? <%= link_to 'Create One!', new_registration_path(resource_name) %></p>
    </div>
  </div>
<% end %>
