<%= form_with(model: post, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="field">
    <%= form.label :title, class: 'label' %>
    <%= form.text_field :title, required: true, type: 'text', class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :body, class: 'label' %>
    <%= form.text_area :body, rows: 8, cols: 40, required: true, type: 'text', class: 'textarea' %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit class: 'button is-link is-fullwidth' %>
  </div>

<% end %>
