<% @posts.each do |post| %>
  <ul>
    <div class="columns is-vcentered">
      <div class="column">
        <p><span class="is-size-6">Title: </span><%= post.title %></p>
        <p><span class="is-size-6">Body: </span><%= post.body.truncate(400, omission: '...') %></p>
        <br>
        <p class="is-size-7 has-text-grey">
          Posted At: <%= post.created_at.strftime('%H:%M %P, %B %d, %Y') %>
        </p>
        <p class="is-size-7 has-text-grey">
          Updated At: <%= post.updated_at.strftime('%H:%M %P, %B, %d, %Y') %>
        </p>
      </div>
      <div class="column is-2">
        <%= link_to 'View Post', post, class: 'button is-link is-fullwidth' %>
      </div>
      <% if user_signed_in? %>
        <div class="column is-2">
          <%= link_to 'Edit Post', edit_post_path(post), class: 'button is-warning is-fullwidth' %>
        </div>
        <div class="column is-2">
          <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger is-fullwidth' %>
        </div>
      <% end %>
    </div>
  </ul>
  <hr>
<% end %>
